node {
  stage "Create build output"
  
  sh "mkdir -p output"
  
  writeFile file: "output/text.md", text: "This is my text in md :)"
  
  writeFile file: "output/text.text", text: "This is my text in txt :)"
  
  stage "Archive build info"
  
  archiveArtifacts artifacts: 'output/*.txt', excludes: 'output/*/md'
  
  def attachments = [
    [
      text: 'All results green, no errors given back.',
       fallback: 'Error backend.',
       color: '#ff0000'
    ]
  ]
  
  slackSend(channel: "#logs", attachments: attachments)
}
